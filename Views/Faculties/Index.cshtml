@model IEnumerable<FindUniversity.Faculties>

@{
    ViewData["Title"] = "Факультети університету";
}

<h1>Факультети університету @ViewBag.UniversityName</h1>

<p>
    @Html.ActionLink("Додати факультет","Create", new { universityId = @ViewBag.UniversityId})
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.University)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.University.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" asp-route-universityId="@ViewBag.UniversityId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" asp-route-universityId="@ViewBag.UniversityId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" asp-route-universityId="@ViewBag.UniversityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
